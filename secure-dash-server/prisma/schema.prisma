
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model User {
  id             String            @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  email          String            @unique
  authentication AuthRecord[]  
}

model AuthRecord {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  authType      String
  password      String
  salt          String
  sessionToken  String  @unique
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @db.ObjectId
}
