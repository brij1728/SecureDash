{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "commonjs",            
    "outDir": "./dist",               
    "rootDir": "./src",              
    "strict": true,                 
    "esModuleInterop": true,          
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,               
    "lib": ["ES2020"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@types/*": ["src/types/*"],
    },
  },
  "include": ["src/**/*",   "src/types/*.d.ts" ],            
  "exclude": ["node_modules", "dist"] 
}
